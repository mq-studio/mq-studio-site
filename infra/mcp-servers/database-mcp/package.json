{
  "name": "database-mcp",
  "version": "1.0.0",
  "type": "module",
  "description": "IDP Database Management MCP - Secure SQL operations and database analysis",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "jest",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "security:scan": "npm audit && npm run lint",
    "dev": "nodemon index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "sqlite3": "^5.1.0",
    "mysql2": "^3.6.0",
    "pg": "^8.11.0"
  },
  "keywords": [
    "mcp",
    "database",
    "sql",
    "sqlite",
    "mysql",
    "postgresql",
    "query"
  ],
  "author": "IDP Infrastructure Team",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8",
    "eslint": "^8.54.0",
    "nodemon": "^3.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "*.js",
      "!coverage/**",
      "!node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}