{
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "op://Development/GitHub/personal-access-token"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/home/ichardart/code"]
    },
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "op://Development/Brave-Search/api-key"
      }
    },
    "postgres": {
      "command": "npx", 
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "op://Production/Database/postgres-connection-string"
      }
    },
    "1password": {
      "command": "npx",
      "args": ["-y", "@1password/mcp-server-1password"]
    }
  },
  "security": {
    "secretsManagement": "1password",
    "auditLogging": true,
    "accessControl": {
      "requireAuthentication": true,
      "allowedDomains": ["localhost", "127.0.0.1"]
    }
  }
}
