{
  "manifest_version": 3,
  "name": "Voice Assistant for AI Platforms",
  "version": "1.0.0",
  "description": "Voice-to-text integration for Claude, Gemini, and other AI platforms",
  
  "permissions": [
    "nativeMessaging",
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://www.perplexity.ai/*",
    "https://chat.openai.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://www.perplexity.ai/*",
        "https://chat.openai.com/*"
      ],
      "js": ["optimized_content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Voice Assistant"
  },
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}